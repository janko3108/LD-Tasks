<section class="image-text-section">
  <div class="image-text-section__container">
    <img
      src="{{ section.settings.image | image_url }}"
      alt="Product"
      class="image-text-section__img"
    />
    <div class="image-text-section__content">
      <h2 class="image-text-section__title">
        {{ section.settings.title }}
      </h2>
      <p class="image-text-section__para">
        {{ section.settings.paragraph }}
      </p>
      <p class="image-text-section__para--extra">
        {{ section.settings.extra_paragraph }}
      </p>
      <button class="image-text-section__button" onclick="this.previousElementSibling.classList.add('visible'); this.style.display='none'">
        {{ section.settings.button_text }}
      </button>
    </div>
  </div>
</section>

<script src="{{ 'image-text-section.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Image Text Section",
  "tag": "section",
  "class": "image-text-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "ELEGANTLY DESIGNED FOR EVERYDAY USE"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Main Text",
      "default": "Whether you're heading to a meeting or strolling through the city..."
    },
    {
      "type": "textarea",
      "id": "extra_paragraph",
      "label": "Hidden Text",
      "default": "Built with premium materials and designed with intention..."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more"
    }
  ],
  "presets": [
    {
      "name": "Image Text Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
